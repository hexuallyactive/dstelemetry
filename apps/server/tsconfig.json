{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    /* Node runtime */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],

    /* Emit */
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",

    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "declaration": true,

    /* Types */
    "types": ["node"],

    /* Interop */
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
